{
  "$schema": "./node_modules/oxlint/configuration_schema.json",
  "categories": {
    "correctness": "error",
    "suspicious": "warn",
    "pedantic": "off"
  },
  "rules": {
    "eslint/no-unused-vars": "error",
    "typescript/no-explicit-any": "warn",
    "import/no-duplicates": "error"
  },
  "overrides": [
    {
      "files": ["**/*.vue"],
      "rules": {
        "vue/require-default-export": "warn"
      }
    }
  ],
  "ignorePatterns": [
    "**/node_modules/**",
    "**/dist/**",
    "**/build/**",
    "**/.turbo/**",
    "**/storybook-static/**"
  ]
}
